generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
enum UserRole{
  user
  hotelOwner

}
model User{
 id String @id @default(uuid()) @map("_id")
 username String
 email String @unique
 image String
 role UserRole @default(user)
 recentSearchCities String[]
 timeStamp Boolean @default(true)
 createdAt DateTime @updatedAt
}
